{
    "formats": {
        "string": {
            "fg": "darkGreen"
        },
        "comment": {
            "fg": "red"
        }
    },

    "regexps": {
        "function": {
            "italic": true,
            "fg":     "blue",

            "regexp": "\\b[A-Za-z0-9_]+(?=\\()"
        }
    },

    "keywords": {
        "Lua": {
            "weight": "Bold",
            "fg":     "darkBlue",

            "list": ["and",       "break",     "do",        "else",      "elseif",    "end",
                     "false",     "for",       "function",  "goto",      "if",        "in",
                     "local",     "nil",       "not",       "or",        "repeat",    "return",
                     "then",      "true",      "until",     "while"]
        },
        "BinaryDigger": {
            "weight": "Bold",
            "fg":     "darkCyan",

            "list": ["bd", "templ", "char", "uchar", "word", "dword", "qword", "double"]
        }
    },

    "comments": {
        "string1": {
            "format": "string",

            "beginRegexp": "\"",
            "endRegexp":   "\""
        },
        "string2": {
            "format": "string",

            "beginRegexp": "'",
            "endRegexp":   "'"
        },

        "singleLine": {
            "format": "comment",

            "beginRegexp": "--"
        },
        "multiLine": {
            "format": "comment",

            "multilined":  true,
            "beginRegexp": "--\\[\\[",
            "endRegexp":   "\\]\\]"
        }
    }
}
